<table width="600" align="center" bgcolor="#fff" cellpadding="5" cellspacing="5">
  <tr>
    <td align="center" >
      <A href="http://www.afterclix.com"><img src="https://s3.ap-south-1.amazonaws.com/afterclix/shared_photos/afterclix_new_logo.svg"></A>
    </td>
  </tr>
  <tr>
    <td height="20">
    </td>
  </tr>
  <tr>
    <td style="font-family:Helvetica; font-size:16px;">Dear Client,
    </td>
  </tr>
  <tr>
    <td height="20"></td>
  </tr>
  <tr>
    <td>
      Your album is submitted successfully, thanks for selecting photos.
    </td>
  </tr>
  <tr>
    <td style="font-family:Helvetica; font-size:16px; height:30px; background:#ecf8ff;">
      Total photos: <%= @total_photos %>
    </td>
  </tr>
  <tr>
    <td style="font-family:Helvetica; font-size:16px; height:30px; background:#ecf8ff;">
      Selected photos: <%= @selected_photos %>
    </td>
  </tr>
  <tr>
    <td style="font-family:Helvetica; font-size:16px; height:30px; background:#ecf8ff;">
      You can view selected photos from following link. 
      <% if @is_private %>
        <%= link_to "View Album", ENV['FRONT_URL'] +@album.user.alias+"/shared_album_login/" + @album.slug + "?token=" + @contact["token"], target: "_blank" %> <br/>
        Passcode: <%= @album.passcode %>
      <% else %>
        <%= link_to "View Album", ENV['FRONT_URL'] +@album.user.alias+"/shared_album/" + @album.slug + "?token=" + @contact["token"], target: "_blank" %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td height="20"></td>
  </tr>
  <tr>
    <td style="font-family:Helvetica; font-size:16px;">
      Thanks for choosing AfterClix.<br>
      AfterClix Team
    </td>
  </tr>
  <tr>
    <td align="center" style="font-family:Helvetica; font-size:16px; height:30px; background:#ccc;">
      <A href="http://www.afterclix.com" style="color:#ed174f;">www.afterclix.com</A><br>
    </td>
  </tr>
</table>