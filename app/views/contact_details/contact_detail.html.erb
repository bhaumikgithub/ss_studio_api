<% content_for :title, 'Contact' %>
<div class="wrapper image-wrapper bg-image inverse-text" data-image-src="<%= asset_path('bg4.jpg') %>">
  <div class="container inner pt-120 pb-120 text-center">
    <h1 class="heading mb-0">Contact Us</h1>
  </div>
</div>
<div class="wrapper light-wrapper">
  <div class="container inner">
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <% if @success %>
          <div class="alert alert-success alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> Contact message sent successfully.
          </div>
        <% end %>
        <h2 class="section-title text-center title-text-color">Get in Touch</h2>
        <div class="row text-center">
          <div class="col-md-4"> <span class="icon icon-color color-default fs-34 mb-10 bullet-icon-color"><i class="fa fa-home" aria-hidden="true"></i></span>
            <p><span class="normal-text-color"><%= @contact_detail&.address&.html_safe %></span></p>
          </div>
          <div class="col-md-4"> <span class="icon icon-color color-default fs-34 mb-10 bullet-icon-color"><i class="fa fa-phone" aria-hidden="true"></i></span>
            <p><a class="nocolor" href="tel:<%= @contact_detail&.phone %>"><span class="normal-text-color"><%= @contact_detail&.phone %></span></a>
            </p>
          </div>
          <div class="col-md-4"> <span class="icon icon-color color-default fs-34 mb-10 bullet-icon-color"><i class="fa fa-envelope" aria-hidden="true"></i></span>
            <p><a class="nocolor" href="mailto:<%= @contact_detail&.email %>"><span class="normal-text-color"><%= @contact_detail&.email %></span></a></p>
          </div>
        </div>
        <div class="space30"></div>
        <% if @errors.present? %>
          <span class="text-danger"><%= @errors.html_safe %></span>
        <% end %>
        <div class="form-container">
          <%#= form_for @contact_message, class: "vanilla vanilla-form" do |f| %>
          <%= form_for @contact_message, url: Rails.env.development? ? contact_messages_path : "http://www.afterclix.com"+contact_messages_path, html: { class: "vanilla vanilla-form new_contact_message", id: "new_contact_message" } do |f| %>
            <div class="row text-center">
              <div class="col-md-6 pr-10">
                <div class="form-group">
                  <%= f.text_field :name,class: 'form-control ', placeholder: "Your name", required: "required"%>
                </div>
              </div>
              <div class="col-md-6 pl-10">
                <div class="form-group">
                  <%= f.email_field :email,class: 'form-control ', placeholder: "Your e-mail", required: "required"%>
                </div>
              </div>
              <div class="col-md-6 pr-10">
                <div class="form-group">
                  <%= f.number_field :phone,class: 'form-control ', placeholder: "Phone", required: "required"%>
                </div>
              </div>
              <div class="col-md-6 pl-10">
                <div class="form-group">
                  <%= f.number_field :captcha, class: 'form-control ', placeholder: "What is answer of 4x7?", required: "required", value: ""%>
                </div>
              </div>
              <div class="col-12">
                <%= f.text_area :message,class: 'form-control ', placeholder: "Type your message here...", required: "required"%>
                <div class="space20"></div>
                <%= f.hidden_field :from, :value => "view_page" %>
                <%= hidden_field_tag :user, params[:user] %>
                <%= f.submit "Submit", class: "btn btn-full-rounded button-background button-font-color button-background-hover button-font-hover" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
