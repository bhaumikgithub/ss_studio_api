<% content_for :title, 'Testimonials' %>
<div class="wrapper light-wrapper">
  <div class="container inner">
    <% if @testimonials.length > 0 %>
      <h2 class="section-title mb-40 text-center">What Our Client Says</h2>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="swiper-container-wrapper basic-slider">
            <div class="swiper-container text-center">
              <div class="swiper-wrapper">
                <% @testimonials.each do |testimonial| %>
                  <div class="swiper-slide">
                    <div class="row gutter-50 d-flex">
                      <div class="col-md-6">
                        <figure><%= image_tag(testimonial.photo.image.url(:medium)) %></figure>
                      </div>
                      <div class="col-md-6 align-self-center">
                        <blockquote class="icon icon-top">
                          <p><%= testimonial.message %></p>
                          <footer class="blockquote-footer"><%= testimonial.client_name %></footer>
                        </blockquote>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="swiper-pagination gap-large"></div>
          </div>
        </div>
      </div>
    <% else %>
      <p class="text-center">No Testimonials available at this Time.</p>
    <% end %>
  </div>
</div>